{
    "include": [
        "./src/**/*.ts",
    ],
    "compilerOptions": {
        "explainFiles": false,
        "baseUrl": ".",
        "paths": {
            "@root": ["src/index.ts"]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules"
        ],
        "types": [
            "@lesnoypudge/types-global-base",
            "vitest/globals",
        ],

        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "auto",

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,

        // "moduleResolution": "NodeNext",
        // "module": "NodeNext",
        // "outDir": "dist",
        // "sourceMap": true,
        // "declaration": true,

        "moduleResolution": "Bundler",
        "module": "ESNext",
        // "noEmit": true,
        "outDir": "build",
        "sourceMap": true,
        "declaration": true,

        "lib": ["ES2022", "DOM", "DOM.Iterable"],
    }
}