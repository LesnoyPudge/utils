{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        // "src/**/*.test.ts",
    ],
    "compilerOptions": {
        "types": ["vitest/globals", "@total-typescript/ts-reset"],
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleDetection": "force",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,

        // "declarationDir": "build",
        "composite": true,
        "allowJs": true,
        "declaration": true,
        // "emitDeclarationOnly": true,
        "declarationMap": false,

        "baseUrl": "./src",
        "paths": {
            "@root": ["index.ts"]
        }
    }
}