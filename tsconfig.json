{
    "exclude": [
        "node_modules",
        "build"
    ],
    "compilerOptions": {
        "types": ["vitest/globals", "@total-typescript/ts-reset"],
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleDetection": "force",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "allowJs": false,
        "declaration": true,
        // "emitDeclarationOnly": true,
        "declarationMap": true,

        "baseUrl": "./src",
        "paths": {
            "@root": ["index.ts"]
        }
    }
}